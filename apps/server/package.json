{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "env-cmd -f .env.development nest start --watch",
    "migration:create:dev": "env-cmd -f .env.development yarn exec mikro-orm migration:create -p ./migrations",
    "migration:up:dev": "env-cmd -f .env.development yarn exec mikro-orm migration:up",
    "migration:down:dev": "env-cmd -f .env.development yarn exec mikro-orm migration:down",
    "migration:list:dev": "env-cmd -f .env.development yarn exec mikro-orm migration:list",
    "migration:pending:dev": "env-cmd -f .env.development yarn exec mikro-orm migration:pending",
    "migration:fresh:dev": "env-cmd -f .env.development yarn exec mikro-orm migration:fresh",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@mikro-orm/cli": "^5.5.2",
    "@mikro-orm/core": "^5.5.2",
    "@mikro-orm/migrations": "5.5.2",
    "@mikro-orm/nestjs": "^5.1.2",
    "@mikro-orm/postgresql": "^5.5.2",
    "@nestjs/apollo": "^10.1.4",
    "@nestjs/common": "^9.1.6",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.1.6",
    "@nestjs/graphql": "^10.1.5",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.1.6",
    "@next-auth/mikro-orm-adapter": "^3.0.1",
    "apollo-server-express": "^3.11.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.20.0",
    "graphql-upload-minimal": "^1.5.4",
    "mudder": "^2.1.0",
    "passport": "^0.6.0",
    "passport-custom": "^1.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.6",
    "@types/express": "^4.17.14",
    "@types/jest": "29.2.2",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "eslint": "8.26.0",
    "eslint-config-nestjs": "*",
    "jest": "29.2.2",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.1",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.8.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
